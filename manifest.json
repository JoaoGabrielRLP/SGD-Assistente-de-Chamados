{
  "manifest_version": 3,
  "name": "SGD Notifier",
  "version": "2.2",
  "description": "Notificações para técnicos no horário de pico e lembretes diários.",
  "permissions": [
    "storage",
    "notifications",
    "alarms",
    "scripting",
    "offscreen"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon128.png"
    }
  },
  "icons": {
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ]
    }
  ]
}